---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonUrl: string;
  backgroundColor: string;
  titleImage?: string;
  decorativeImage?: string;
  decorativeImageClass?: string;
}

const { title, description, buttonText, buttonUrl, backgroundColor, titleImage, decorativeImage, decorativeImageClass } = Astro.props;

const defaultImageClass = "pointer-events-none absolute -bottom-4 -right-4 z-20 h-36 w-auto rotate-12 object-contain transition-transform group-hover:scale-105";
const imageClass = decorativeImageClass || defaultImageClass;
---

<div class="group relative">
  <a
    href={buttonUrl}
    class="relative block rounded-2xl p-4 transition-transform group-hover:scale-[1.02] sm:p-6"
    style={`background-color: ${backgroundColor};`}
  >
    <div class="relative z-10 flex flex-col gap-2 sm:gap-3">
      {titleImage ? (
        <img src={titleImage} alt={title} class="h-8 w-auto object-contain object-left sm:h-12" />
      ) : (
        <h3 class="text-xl font-bold text-white sm:text-2xl">{title}</h3>
      )}
      
      <p class="text-sm text-white/90 sm:text-base">{description}</p>
      
      <div class="mt-1 sm:mt-2">
        <span class="inline-block rounded-full bg-white/20 px-4 py-1.5 text-xs font-bold uppercase tracking-wide text-white transition-colors group-hover:bg-white/30 sm:px-6 sm:py-2 sm:text-sm">
          {buttonText}
        </span>
      </div>
    </div>
  </a>
  
  {decorativeImage && (
    <img
      src={decorativeImage}
      alt=""
      class={imageClass}
    />
  )}
</div>
